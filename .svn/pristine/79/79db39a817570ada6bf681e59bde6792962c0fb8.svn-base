@charset "UTF-8";
 
/* 팝업창 전용 div 컨테이너 */
.pop-container {
  background:white; 
  height:95vh; 
  margin: 20px;
}
body {
  background: #EFEFEF;
}

/* header */
.content-header p {
  margin: 0;
  font-size: 15px;
  font-weight: bold;
}
.content-header {
  border-bottom: 5px solid #004680;
  margin: 20px 30px;
  padding: 30px 0 20px 0;
}
/* 버튼 */
.btn-basic {
  background: #004680;
  color: white;
  width: 90px;
  padding: 6px;
  border: 2px solid #004680;
  border-radius: 0;
  height: 34px;
  font-size: 13px;
  font-weight: bold;
}

.btn-save {
  background: #004680;
  color: white;
  width: 90px;
  padding: 6px;
  border: 2px solid #004680;
  border-radius: 0;
  height: 34px;
  font-size: 13px;
  font-weight: bold;
}

.btn-cancle {
  background: #EFEFEF;
  color: #556278;
  width: 90px;
  padding: 6px;
  border: 2px solid #EFEFEF;
  border-radius: 0;
  height: 34px;
  font-size: 13px;
  font-weight: bold;
}

.btn-upload {
  background: #EFEFEF;
  color: #556278;
  width: 100px;
  padding: 6px;
  border: 2px solid #EFEFEF;
  border-radius: 0;
  height: 34px;
  font-size: 13px;
  font-weight: bold;
}

.btn-basic:hover {
  background: white;
  color: #59BEE9;
}

.btn-cancle:hover {
  background: #F7F6ED;
  color: tomato;
}

/* 테이블 */
/* tbody > tr> td:nth-child(1){ */
/* 	text-align: left; */
/* } */

/* tbody > tr > td:nth-child(2){ */
/* 	text-align: center; */
/* } */
table {
  text-align: center;
}

th {
  background: #EFEFEF;
}
td {
  color: #556278;
}

td.table-th {
  background: #EFEFEF;
  font-weight: bold;
  width: 130px;
  vertical-align: middle;
  text-align: center;
}
tr {
  font-size: 12px;
  border-top: 2px solid #EFEFEF;
}
td {
  padding: 1px 12px;	
}
tr.table-content {
  height:300px;
}
tr.first-tr {
  border-top: 2px solid #EFEFEF;
  border-bottom: 2px solid #EFEFEF;
}
tr.last-tr {
  border-top: 2px solid #EFEFEF;
  border-bottom: 2px solid #EFEFEF;
}

/* 텍스트 박스 */
.edit-textbox {
	background: #E0F2F7;
	border: none;
