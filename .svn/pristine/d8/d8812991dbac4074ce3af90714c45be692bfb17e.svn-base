table {
  text-align: center;
}

th {
  background: #EFEFEF;
}
td {
  color: #556278;
}

td.table-th {
  background: #EFEFEF;
  font-weight: bold;
  width: 130px;
  vertical-align: middle;
  text-align: center;
}
tr {
  font-size: 12px;
  border-top: 2px solid #EFEFEF;
}
td {
  padding: 1px 12px;	
}
tr.table-content {
  height:300px;
}
tr.first-tr {
  border-top: 2px solid #EFEFEF;
  border-bottom: 2px solid #EFEFEF;
}
tr.last-tr {
  border-top: 2px solid #EFEFEF;
  border-bottom: 2px solid #EFEFEF;
}

